{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "lib": [
            "dom",
            "es2018",
            "esnext.asynciterable"
        ],
        "moduleResolution": "node",
        "outDir": "./dist",
        "strict": true,
        "strictPropertyInitialization": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "checkJs": false
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}